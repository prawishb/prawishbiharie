---
import RootLayout from "../layouts/RootLayout.astro";
import Section from "../components/Section/Section.tsx";
import Skill from "../components/Skill.tsx";
import Status from "../components/Status.tsx";
import Project from "../components/Project/Project.tsx";

import skills from "../data/skills";
import projects from "../data/projects";
---

<RootLayout title="Prawish Biharie">
  <Section id="hero">
    <Section.Content>
      <div class="flex flex-col justify-between gap-16">
        <Status>
          {
            `I'm currently searching for new oppurtunities to advance my skills. Contact me here.`
          }
        </Status>

        <div
          class="max-w-prose mx-auto flex flex-col items-center text-center gap-2"
        >
          <h1 class="text-neutral-100 text-5xl font-bold">Prawish Biharie</h1>
          <span class="font-semibold">Full Stack Developer</span>
          <h3 class="mt-4">
            Electrical engineer turned software pro. Bridging hardware-software
            gap, embracing innovation through continuous learning.
          </h3>

          <div class="flex items-center gap-4">
            <button
              class="bg-neutral-950 text-neutral-100 px-6 py-2 rounded-md"
            >
              Hire Me
            </button>
            <button class="text-neutral-100"> Download CV</button>
          </div>
        </div>
      </div>
    </Section.Content>
  </Section>

  <div class="bg-neutral-950 px-4">
    <Section>
      <Section.Title>About</Section.Title>
      <Section.Description>A bit more about me</Section.Description>
      <Section.Content>
        <p class="mb-8 text-center">
          {
            `Hello, I'm Prawish Biharie, a seasoned professional who made a smooth transition from electrical engineering to software engineering, capitalizing on my 3+ years of experience. My background equips me with an analytical mindset and strong problem-solving skills, which I honed in electrical engineering, giving me a unique edge in crafting innovative solutions that bridge the gap between hardware and software realms.`
          }
        </p>
        <p class="mb-8 text-center">
          {
            `With an unwavering passion for continuous learning, I constantly explore new methodologies, languages, and tools to stay at the forefront of the dynamic software landscape. This proactive approach ensures that my skills remain finely tuned and pertinent, allowing me to offer fresh perspectives and tackle challenges effectively in this ever-evolving field.`
          }
        </p>
      </Section.Content>
    </Section>

    <Section id="skills">
      <Section.Title>Skills</Section.Title>
      <Section.Description>
        These are all my skills that I aquired during my time programming.
      </Section.Description>
      <Section.Content>
        <ul class="flex flex-wrap justify-center gap-4">
          {
            skills.map((skill) => (
              <li>
                <Skill>{skill}</Skill>
              </li>
            ))
          }
        </ul>
      </Section.Content>
    </Section>

    <Section id="projects">
      <Section.Title>Projects</Section.Title>
      <Section.Description>
        These are some of my top projects. To see all my projects, visit my
        github profile
      </Section.Description>
      <Section.Content>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-16">
          {
            projects.map((project) => (
              <Project>
                <Project.Image />
                <Project.Content>
                  <Project.Name>{project.name}</Project.Name>
                  <Project.Description>
                    {project.description}
                  </Project.Description>

                  {project.tags && (
                    <ul class="flex items-center gap-2">
                      {project.tags.map((tag, index) => (
                        <Project.Tag>{tag}</Project.Tag>
                      ))}
                    </ul>
                  )}
                </Project.Content>
              </Project>
            ))
          }
        </div>
      </Section.Content>
    </Section>

    <Section id="experiences">
      <Section.Title>Experiences</Section.Title>
      <Section.Description>
        The highlights of my career journey over the years
      </Section.Description>
      <Section.Content>
        <div class="text-center">Work in progress...</div>
      </Section.Content>
    </Section>
  </div>
</RootLayout>
