---
const { title } = Astro.props;

import Header from "../components/Header";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en" class="!scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Prawish Biharie's Portfolio" />
    <title>{title}</title>
  </head>
  <body
    class="bg-neutral-950 text-neutral-400 selection:bg-amber-200 selection:text-amber-900 antialiased min-h-screen w-full flex flex-col"
  >
    <Header client:load />
    <div class="flex-1 pt-20">
      <slot />
    </div>
    <Footer />
  </body>
</html>
